// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  name     String
  lastName String
  password String

  reservations Reservation[]
}

model Reservation {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  user            User     @relation(fields: [userId], references: [id])
  userId          String   @db.ObjectId
  movieId         String
  title           String
  date            DateTime
  price           Float
  watched         Boolean? @default(false)
  screeningNumber Int
  seatNumber      Int
}

model Opinion {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  movieTitle  String
  description String
  movieId     String
  rate        String
}

model Admin {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  lastName String
  password String
  email    String
}

model CinemaAdmin {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  lastName        String
  cinemaName      String
  password        String
  movies          String[]
  MoviesScreening String[]
}

model Movie {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  images      String[]
  opinionId   String[]
  premiere    DateTime
  end         DateTime
}

model movieScreening {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  movieId      String
  reservations Int[]
  price        Float
  date         DateTime
  end          Boolean
}
